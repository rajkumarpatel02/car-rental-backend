{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
         "noImplicitAny": false,
         "skipLibCheck": true,
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "services/**/*",
        "shared/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}